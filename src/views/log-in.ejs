<%- include('partials/global-header') %>

<%- include('partials/page-header', {title: website.name}) %>

<div class="page-content">
    <div class="bordered-box">
        <h1>Log In</h1>

        <form id="log-in-form">
            <p>
                <label for="log-in-email">Email Address:</label>
                <input type="email" id="log-in-email" name="email" value="<%= email %>" />
            </p>

            <p>
                <label for="log-in-password">Password:</label>
                <input type="password" id="log-in-password" name="password" />
            </p>

            <p>
                <input type="submit" value="Log In" />
            </p>

            <input type="hidden" name="continueTo" value="<%= continueTo %>" />
        </form>
    </div>

    <p>
        <b>Not got an account?</b>
        <a href="/register?continueTo=<%= continueTo %>">Register</a>
    </p>

    <p>
        <b>Forgot your password?</b>
        <a href="/forgot-password">Reset password</a>
    </p>
</div>

<%- include('partials/copyright-footer') %>
