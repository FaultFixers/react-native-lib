<%- include('partials/global-header') %>

<%- include('partials/page-header', {title: 'Forgot Password For ' + website.name}) %>

<div class="page-content" id="login-page">
    <div class="bordered-box">
        <h1>Forgot Password</h1>

        <p>First, we need your email address.</p>

        <form id="forgot-password-form">
            <p>
                <input type="email" name="email" placeholder="Your email address..." />
            </p>

            <p>
                <input type="submit" value="Continue" />
            </p>
        </form>
    </div>

    <p>
        <a href="/login" class="button">Remembered your password?</a>
    </p>

    <p>
        <a href="/register" class="button">Register</a>
    </p>
</div>

<%- include('partials/copyright-footer') %>
